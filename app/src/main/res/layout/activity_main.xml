    <Button
        android:id="@+id/discover_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:clickable="true"
        android:gravity="center"
        android:onClick="discoverClicked"
        android:text="Discover" />

    <TextView
        android:id="@+id/discover_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/discover_btn"
        android:text="Discovered Contacts:"
        android:textColor="#9E25B3"
        android:layout_marginTop="30dp"
        android:textSize="15dp" />

    <ListView
        android:id="@+id/discovered_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/discover_txt"
        android:layout_alignParentBottom="true" />


